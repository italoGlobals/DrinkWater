platform :android do
  desc "Build APK para desenvolvimento"
  lane :build_apk do
    gradle(
      task: "assembleRelease",
      print_command: true
    )
  end

  desc "Build AAB para produção"
  lane :build_aab do
    gradle(
      task: "bundleRelease",
      print_command: true
    )
  end
end
